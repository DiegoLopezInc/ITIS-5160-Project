<%- include('../partials/header.ejs') %>

<div class="profile-container">
    <h2>Welcome, <%= user.firstName %></h2>
    
    <div class="user-events">
        <h3>Your Events</h3>
        <% if(events && events.length) { %>
            <div class="events-list">
                <% events.forEach(event => { %>
                    <div class="event-card">
                        <h4><%= event.title %></h4>
                        <p>Date: <%= event.startDateTime.toLocaleDateString() %></p>
                        <div class="event-actions">
                            <a href="/events/<%= event._id %>" class="btn">View</a>
                            <a href="/events/<%= event._id %>/edit" class="btn">Edit</a>
                            <form action="/events/<%= event._id %>?_method=DELETE" method="POST" class="inline-form">
                                <button type="submit" class="btn delete">Delete</button>
                            </form>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <p>You haven't created any events yet.</p>
        <% } %>
    </div>

    <div class="user-rsvps">
        <h3>Your RSVPs</h3>
        <% if(rsvps && rsvps.length) { %>
            <div class="rsvps-list">
                <% rsvps.forEach(rsvp => { %>
                    <% if(rsvp.event) { %>
                        <div class="rsvp-card">
                            <div class="rsvp-status <%= rsvp.status.toLowerCase() %>">
                                <%= rsvp.status %>
                            </div>
                            <div class="rsvp-details">
                                <h4><%= rsvp.event.title %></h4>
                                <p>Host: <%= rsvp.event.host.firstName %> <%= rsvp.event.host.lastName %></p>
                                <p>Date: <%= rsvp.event.startDateTime.toLocaleDateString() %></p>
                                <p>Location: <%= rsvp.event.location %></p>
                            </div>
                            <div class="rsvp-actions">
                                <a href="/events/<%= rsvp.event._id %>" class="btn">View Event</a>
                            </div>
                        </div>
                    <% } %>
                <% }) %>
            </div>
        <% } else { %>
            <p>You haven't RSVP'd to any events yet.</p>
        <% } %>
    </div>
</div>

<%- include('../partials/footer.ejs') %>