<%- include('./partials/header.ejs') %>

<div class="home-container">
    <h1>Welcome to ColorStack UNC Charlotte</h1>
    
    <% if (successMessages && successMessages.length > 0) { %>
        <div class="success-messages">
            <% successMessages.forEach(message => { %>
                <p class="success"><%= message %></p>
            <% }); %>
        </div>
    <% } %>

    <div class="home-content">
        <p>Join our community and explore upcoming events!</p>
        <% if (!user) { %>
            <div class="cta-buttons">
                <a href="/users/new" class="btn">Sign Up</a>
                <a href="/users/login" class="btn">Login</a>
            </div>
        <% } %>
        <a href="/events" class="btn">View Events</a>
    </div>
</div>

<%- include('./partials/footer.ejs') %>
