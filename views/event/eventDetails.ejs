<%- include('../partials/header', {title: 'Event Details'}) %>

<div class="title-bar">
    <h2><%= event.hostName %></h2>
    <h1><%= event.title %></h1>
    <div class="options">
        <ul>
            <li><form><button type='submit' formmethod='GET' formaction='/events/<%= event.id %>/edit'>Edit Event</button></form></li>
            <li><form><button type='submit' formmethod='POST' formaction='/events/<%= event.id %>?_method=DELETE'>Delete Event</button></form></li>
        </ul>
    </div>
</div>

<section id="event-details">
    <div class="event-info">
        <p>Category: <%= event.category %></p>
        <p>Start: <%= new Date(event.startDateTime).toLocaleString() %></p>
        <p>End: <%= new Date(event.endDateTime).toLocaleString() %></p>
        <p><%= event.details %></p>
    </div>
    <img src="<%= event.image %>" alt="Event image">
</section>

<div id="buttons">
    <button id="register">Register</button>
    <button id="cancel">Cancel</button>
</div>

<%- include('../partials/footer') %>
